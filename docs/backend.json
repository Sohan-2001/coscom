{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Cosmic Insights application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "googleId": {
          "type": "string",
          "description": "The user's Google ID obtained from Google OAuth."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "User's first name."
        },
        "lastName": {
          "type": "string",
          "description": "User's last name."
        },
        "birthDate": {
          "type": "string",
          "description": "User's birth date.",
          "format": "date-time"
        },
        "birthTime": {
          "type": "string",
          "description": "User's birth time."
        }
      },
      "required": [
        "id",
        "googleId",
        "email"
      ]
    },
    "DestinyReading": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DestinyReading",
      "type": "object",
      "description": "Represents a user's destiny reading.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the reading entry."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N DestinyReading)"
        },
        "date": {
          "type": "string",
          "description": "The date for which the reading is generated.",
          "format": "date-time"
        },
        "content": {
          "type": "string",
          "description": "The generated reading content."
        }
      },
      "required": [
        "id",
        "userId",
        "date",
        "content"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles. Secured by path-based rules. Only the authenticated user can read/write their own profile.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/readings/{readingId}",
        "definition": {
          "entityName": "DestinyReading",
          "schema": {
            "$ref": "#/backend/entities/DestinyReading"
          },
          "description": "Stores destiny readings specific to each user.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user."
            },
            {
              "name": "readingId",
              "description": "The unique identifier of the reading entry."
            }
          ]
        }
      }
    ]
  }
}
